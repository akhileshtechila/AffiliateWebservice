{% extends '::baseadmindemo.html.twig' %}
{% block title %} Affiliate Payment Released {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/select2.css')}}" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css">
{% endblock %}
{% block javascripts %}
    {#    {{ parent() }}#}
    <!-- jQuery 2.0.2 -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <!-- Bootstrap -->


    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

    <script src="{{ asset('js/bootstrap.min.js')}}" type="text/javascript"></script>

    <!-- DATA TABES SCRIPT -->
    <script src="{{ asset('js/plugins/datatables/jquery.dataTables.js')}}" type="text/javascript"></script>
    <script src="{{ asset('js/plugins/datatables/dataTables.bootstrap.js')}}" type="text/javascript"></script>
    <!-- AdminLTE App -->

    <script src="{{ asset('js/AdminLTE/app.js')}}" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="{{ asset('js/AdminLTE/demo.js')}}" type="text/javascript"></script>
    <script src="{{ asset('js/plugins/select/select2.js')}}" type="text/javascript"></script>


    <script type="text/javascript">
        $(function() {
            //$( "#datepicker1" ).datepicker();
            $("#affiliatepayrel_releaseDate").datepicker($.datepicker.regional["en"]).datepicker("option", {
                changeMonth: true,
                changeYear: true,
                dateFormat: "dd/mm/yy",
                todayHighlight: true,
                //yearRange: "1972:2020"
            });

        });

    </script>


    <script>
        $(document).ready(function() {
            $("#affiliatepayrel_Userinfo").select2({
                placeholder: "Select a Option",
                allowClear: true
            });

            $("#affiliatepayrel_Affiliateinfo").select2({
                placeholder: "Select a Option",
                allowClear: true
            });
        });
    </script>

{% endblock %}

{% block body -%}

    <!-- Main content -->

    <div class="col-md-6">
        <!-- general form elements disabled -->
        <div class="box box-warning">
            <div class="box-header">
                <h3 class="box-title">Affiliate Payment Released</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                {{form_start(edit_form, {'enctype': 'multipart/form-data' ,'attr':{'class':'' ,'role':'form'}}) }}
                <!-- text input -->
                <div class="form-group">
                    <label>User name</label>
                    {{ form_widget(edit_form.Userinfo,{'attr':{'class':""}}) }} 
                </div>

                <!-- text input -->
                <div class="form-group">
                    <label>Affiliate Name</label>
                    {{ form_widget(edit_form.Affiliateinfo,{'attr':{'class':""}}) }} 

                </div>

                <!-- text input -->
                <div class="form-group">
                    <label>Release Date</label>                                        
                    {{ form_widget(edit_form.releaseDate,{'attr':{'class':"form-control"}}) }} 

                </div>

                <!-- text input -->
                <div class="form-group">
                    <label>Release Amount</label>
                    {{ form_widget(edit_form.releaseAmt,{'attr':{'class':"form-control"}}) }} 
                </div>


                <div class="form-group">
                    <label>Actual Amount</label>
                    {{ form_widget(edit_form.actualAmt,{'attr':{'class':"form-control"}}) }} 
                </div>

                <div class="form-group">
                    <label>Pay Mode</label>
                    {{ form_widget(edit_form.payMode,{'attr':{'class':"form-control"}}) }} 
                </div>
                
                 <div class="form-group">
                    <label>Pay Status</label>
                    {{ form_widget(edit_form.payStatus,{'attr':{'class':"form-control"}}) }} 
                </div>
                

                {{ form_widget(edit_form._token) }}
                <div class="form-group">
                    <button type="submit"  class="btn btn-success"><i class="icon-ok icon-green"></i> Create</button>
                </div>

                {{form_end(edit_form, {'render_rest': false}) }} 
            </div><!-- /.box-body -->

            <ul class="record_actions">
                <li>
                    <a href="{{ path('affiliatepayrel') }}">
                        Back to the list
                    </a>
                </li>
            </ul>

        </div><!-- /.box -->

    </div><!--/.col (right) -->
{% endblock %}