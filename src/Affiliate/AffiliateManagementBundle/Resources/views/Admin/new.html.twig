{% extends '::baseadmindemo.html.twig' %}
{% block title %} Admin  {% endblock %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %}
{% block javascripts %}
   {{ parent() }} 
   
    
{% endblock %}

{% block body -%}

    <!-- Main content -->

                        <div class="col-md-6">
                            <!-- general form elements disabled -->
                            <div class="box box-warning">
                                <div class="box-header">
                                    <h3 class="box-title">Admin Information</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    {{form_start(form, {'enctype': 'multipart/form-data' ,'attr':{'class':'' ,'role':'form'}}) }}
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label>First Name</label>
                                             {{ form_widget(form.fname,{'attr':{'class':"form-control"}}) }} 
                                        </div>
                                        
                                         <!-- text input -->
                                        <div class="form-group">
                                            <label>Last Name</label>
                                           {{ form_widget(form.lname,{'attr':{'class':"form-control"}}) }} 
                                            
                                        </div>
                                         
                                          <!-- text input -->
                                        <div class="form-group">
                                            <label>Email</label>
                                        
                                           {{ form_widget(form.email,{'attr':{'class':"form-control"}}) }} 
                                            
                                        </div>
                                          
                                           <!-- text input -->
                                        <div class="form-group">
                                            <label>User Name</label>
                                             {{ form_widget(form.username,{'attr':{'class':"form-control"}}) }} 
                                        </div>
                                       
                                      
                                        
                                        <div class="form-group">
                                            <label>Password</label>
                                            {{ form_widget(form.password.first,{'attr':{'class':"form-control"}}) }} 
                                        </div>
                                         
                                         <div class="form-group">
                                            <label>Confirm Password</label>
                                            {{ form_widget(form.password.second,{'attr':{'class':"form-control"}}) }} 
                                        </div>
                                                                                  
                                                                            
                                        
                                          {{ form_widget(form._token) }}
                                           <div class="form-group">
                                             <button type="submit"  class="btn btn-success"><i class="icon-ok icon-green"></i> Create</button>
                                        </div>
                                          
                                    {{form_end(form, {'render_rest': false}) }} 
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                            
                            <ul class="record_actions">
                                <li>
                                    <a href="{{ path('admin') }}">
                                        Back to the list
                                    </a>
                                </li>
                            </ul>
                            
                        </div><!--/.col (right) -->

          

{% endblock %}